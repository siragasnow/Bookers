<main>
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<td colspan="3"></td>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book) %></td>
				<td><%= link_to "Edit", edit_book_path(book) %></td>
				<td><%= link_to "Destroy", book_path(book), method: :delete %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<h2>New book</h2>
	<%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
				<h2>
					<%= @book.errors.count %>errors prohibited this book from being saved:
				</h2>
				<ul>
					<% @book.errors.full_messages.each do |message| %>
					<li><%= message %>
					</li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<h4>Title</h4>
			<%= f.text_field :title %>

		<h4>Body</h4>
			<%= f.text_area :body %>

		<p>
			<%= f.submit 'Create Book' %>
		</p>
	<% end %>
</main>